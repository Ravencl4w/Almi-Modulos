<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_form_pharma" model="ir.ui.view">
        <field name="name">stock.move.form.pharma</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campos de control de calidad después del último grupo -->
            <xpath expr="//sheet" position="inside">
                <group string="Control de Calidad Farmacéutico">
                    <group>
                        <field name="quality_check"/>
                        <field name="rejection_reason_id" invisible="quality_check != 'failed'"/>
                        <field name="rejected_by" invisible="quality_check != 'failed'" readonly="1"/>
                        <field name="rejection_date" invisible="quality_check != 'failed'" readonly="1"/>
                    </group>
                    <group>
                        <field name="requires_cold_chain" widget="boolean"/>
                        <field name="lot_expiry_state" invisible="not lot_ids"/>
                        <field name="lot_days_to_expiry" invisible="not lot_ids"/>
                    </group>
                </group>
                <group string="Notas de Rechazo" invisible="quality_check != 'failed'">
                    <field name="rejection_notes" nolabel="1" placeholder="Notas sobre el rechazo..."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

