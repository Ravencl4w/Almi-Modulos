<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_expiry_alert_form" model="ir.ui.view">
        <field name="name">stock.expiry.alert.form</field>
        <field name="model">stock.expiry.alert</field>
        <field name="arch" type="xml">
            <form string="Alerta de Vencimiento">
                <header>
                    <button name="action_request_exchange" type="object" string="Solicitar Canje" class="btn-warning"/>
                    <button name="action_mark_resolved" type="object" string="Marcar Resuelto" class="btn-success"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="lot_id"/>
                            <field name="product_id"/>
                            <field name="expiry_date"/>
                            <field name="days_to_expiry"/>
                        </group>
                        <group>
                            <field name="priority" widget="badge"/>
                            <field name="action_taken"/>
                            <field name="responsible_id"/>
                            <field name="resolution_date"/>
                        </group>
                    </group>
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_expiry_alert_list" model="ir.ui.view">
        <field name="name">stock.expiry.alert.list</field>
        <field name="model">stock.expiry.alert</field>
        <field name="arch" type="xml">
            <list string="Alertas de Vencimiento">
                <field name="lot_id"/>
                <field name="product_id"/>
                <field name="expiry_date"/>
                <field name="days_to_expiry"/>
                <field name="priority" widget="badge"/>
                <field name="state" widget="badge"/>
                <field name="responsible_id"/>
            </list>
        </field>
    </record>
    
    <record id="action_expiry_alert" model="ir.actions.act_window">
        <field name="name">Alertas de Vencimiento</field>
        <field name="res_model">stock.expiry.alert</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

