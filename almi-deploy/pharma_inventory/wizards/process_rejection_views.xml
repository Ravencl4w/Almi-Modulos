<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_process_rejection_wizard" model="ir.ui.view">
        <field name="name">process.rejection.wizard.form</field>
        <field name="model">process.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Procesar Rechazo">
                <group>
                    <field name="lot_id"/>
                    <field name="rejection_reason"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirmar Rechazo" class="btn-danger"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

