<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_register_temperature_wizard" model="ir.ui.view">
        <field name="name">register.temperature.wizard.form</field>
        <field name="model">register.temperature.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Temperatura">
                <group>
                    <field name="location_id"/>
                    <field name="temperature"/>
                    <field name="humidity"/>
                    <field name="equipment"/>
                </group>
                <field name="notes"/>
                <footer>
                    <button name="action_register" type="object" string="Registrar" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

