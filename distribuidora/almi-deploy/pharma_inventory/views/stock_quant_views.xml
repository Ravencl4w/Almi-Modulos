<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_quant_list_pharma" model="ir.ui.view">
        <field name="name">stock.quant.list.pharma</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="lot_expiry_date" optional="show"/>
                <field name="lot_expiry_state" optional="show" widget="badge"
                       decoration-success="lot_expiry_state == 'ok'"
                       decoration-danger="lot_expiry_state == 'expired'"/>
                <field name="lot_days_to_expiry" optional="hide"/>
                <field name="requires_cold_chain" optional="hide" widget="boolean"/>
            </xpath>
        </field>
    </record>
</odoo>

