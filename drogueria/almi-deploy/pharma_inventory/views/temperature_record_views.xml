<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_temperature_record_form" model="ir.ui.view">
        <field name="name">stock.temperature.record.form</field>
        <field name="model">stock.temperature.record</field>
        <field name="arch" type="xml">
            <form string="Registro de Temperatura">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="location_id"/>
                            <field name="record_date"/>
                            <field name="temperature"/>
                            <field name="humidity"/>
                        </group>
                        <group>
                            <field name="temperature_min"/>
                            <field name="temperature_max"/>
                            <field name="recorded_by"/>
                            <field name="equipment"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="corrective_action" invisible="state == 'ok'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_temperature_record_list" model="ir.ui.view">
        <field name="name">stock.temperature.record.list</field>
        <field name="model">stock.temperature.record</field>
        <field name="arch" type="xml">
            <list string="Registros de Temperatura">
                <field name="location_name"/>
                <field name="record_date"/>
                <field name="temperature"/>
                <field name="humidity"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'ok'"
                       decoration-warning="state == 'warning'"
                       decoration-danger="state == 'critical'"/>
                <field name="recorded_by"/>
            </list>
        </field>
    </record>
    
    <record id="view_temperature_record_graph" model="ir.ui.view">
        <field name="name">stock.temperature.record.graph</field>
        <field name="model">stock.temperature.record</field>
        <field name="arch" type="xml">
            <graph string="EvoluciÃ³n de Temperatura" type="line">
                <field name="record_date"/>
                <field name="temperature" type="measure"/>
            </graph>
        </field>
    </record>
    
    <record id="action_temperature_record" model="ir.actions.act_window">
        <field name="name">Registros de Temperatura</field>
        <field name="res_model">stock.temperature.record</field>
        <field name="view_mode">list,form,graph</field>
    </record>
</odoo>

