<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario para Marcas -->
    <record id="view_product_brand_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Marca de Producto">
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <field name="logo_filename" invisible="1"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre de la marca"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información General">
                            <field name="code"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="partner_id"/>
                        </group>
                        
                        <group string="Estadísticas">
                            <field name="product_count" widget="statinfo"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group string="Descripción">
                        <field name="description" nolabel="1" placeholder="Descripción de la marca, historia, características..."/>
                    </group>
                    
                    <notebook>
                        <page string="Productos" name="products">
                            <field name="product_ids" mode="list">
                                <list string="Productos">
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="categ_id"/>
                                    <field name="list_price"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de lista para Marcas -->
    <record id="view_product_brand_list" model="ir.ui.view">
        <field name="name">product.brand.list</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <list string="Marcas">
                <field name="name"/>
                <field name="code"/>
                <field name="product_count"/>
                <field name="partner_id"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    
    <!-- Vista Kanban para Marcas -->
    <record id="view_product_brand_kanban" model="ir.ui.view">
        <field name="name">product.brand.kanban</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="product_count"/>
                <field name="logo"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="o_kanban_record_subtitle" invisible="not code">
                                        Código: <field name="code"/>
                                    </span>
                                </div>
                                <field name="logo" widget="image" class="oe_avatar"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-cube"/> <field name="product_count"/> productos
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vista de búsqueda para Marcas -->
    <record id="view_product_brand_search" model="ir.ui.view">
        <field name="name">product.brand.search</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <search string="Buscar Marcas">
                <field name="name" string="Marca"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="code"/>
                
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="Con Productos" name="with_products" 
                        domain="[('product_count', '>', 0)]"/>
                <filter string="Sin Productos" name="without_products" 
                        domain="[('product_count', '=', 0)]"/>
                
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Propietario" name="group_partner" 
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Compañía" name="group_company" 
                            context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción para abrir Marcas -->
    <record id="action_product_brand" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera marca
            </p>
            <p>
                Las marcas te permiten organizar tus productos por marca comercial
                y facilitar la búsqueda y clasificación.
            </p>
        </field>
    </record>

</odoo>

