<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_create_sheet_wizard_form" model="ir.ui.view">
        <field name="name">create.sheet.wizard.form</field>
        <field name="model">create.sheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Planilla de Despacho">
                <group>
                    <group>
                        <field name="sheet_date"/>
                        <field name="driver_id"/>
                    </group>
                    <group>
                        <field name="vehicle_id"/>
                        <field name="invoice_count"/>
                    </group>
                </group>
                <group>
                    <field name="notes" placeholder="Observaciones adicionales..."/>
                </group>
                <notebook>
                    <page string="Facturas Seleccionadas" name="invoices">
                        <field name="invoice_ids" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="invoice_date"/>
                                <field name="partner_id"/>
                                <field name="amount_total" sum="Total"/>
                                <field name="state" widget="badge"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_create_sheet" string="Crear Planilla" 
                            type="object" class="oe_highlight"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

